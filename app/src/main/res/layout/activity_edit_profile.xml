<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/edittext"
        android:layout_width="wrap_content"
        android:textColor="#2E3192"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="45sp"
        android:layout_marginTop="30sp"
        android:textSize="30sp"
        android:text="Edit Profile" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45sp"
        android:layout_marginTop="100sp"
        android:text="Simon Doe"
        android:textColor="#2E3192"
        android:textSize="20sp"
        android:drawableRight="@drawable/ic_round_edit"
        android:drawablePadding="20sp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45sp"
        android:layout_marginTop="130sp"
        android:text="Software Engineer"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginStart="230sp"
        android:layout_marginTop="80sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vertical_line" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 1234567890"
        android:textColor="#2e3192"
        android:drawableLeft="@drawable/ic_round_phone"
        android:drawablePadding="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="250sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250sp"
        android:layout_marginTop="110dp"
        android:drawableLeft="@drawable/ic_round_email"
        android:drawablePadding="10dp"
        android:text="abc@gmail.com"
        android:textColor="#2e3192" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250sp"
        android:layout_marginTop="140dp"
        android:drawableLeft="@drawable/ic_baseline_link"
        android:drawablePadding="10dp"
        android:text="www.abc.com"
        android:textColor="#2e3192" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180sp"
        android:layout_marginStart="50sp"
        app:srcCompat="@drawable/horizontal_line" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abc_man"
        android:layout_marginTop="20sp"
        android:layout_below="@id/imageView3"
        android:layout_marginStart="30sp"
        />

    <TextView
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_alignStart="@id/imageView4"
        android:layout_marginStart="89dp"
        android:layout_marginTop="25sp"
        android:drawableEnd="@drawable/ic_round_edit"
        android:text="Summarize your career here. You can make PDFverion of your resume using our free sketch template here. "
        android:textColor="#2e3192" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_marginTop="20sp"
        android:layout_marginStart="50sp"
        app:srcCompat="@drawable/horizontal_line" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_marginStart="30sp"
            android:layout_marginTop="20sp"
            />
        <TextView
            android:layout_alignStart="@id/line1"
            android:layout_marginStart="20sp"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:textColor="#2E3192"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Experience"
            android:drawableEnd="@drawable/ic_round_edit"
            android:drawablePadding="220sp"/>
            <TextView
                android:id="@+id/exp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senior Software Engineer"
                android:textColor="@color/black"
                android:layout_below="@id/line1"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/exp1"
                android:text="Google | 2019-present"
                android:layout_below="@id/line1"
                android:textSize="12sp"
                android:layout_marginTop="16sp"
                android:layout_marginStart="250sp"/>
            <TextView
                android:id="@+id/sum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary of past experience"
                android:layout_below="@id/exp1"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/exp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engineer"
                android:textColor="@color/black"
                android:layout_below="@id/sum1"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/exp2"
                android:text="Capgamini | 2015-2019"
                android:layout_below="@id/sum1"
                android:textSize="12sp"
                android:layout_marginTop="18sp"
                android:layout_marginStart="250sp"/>
            <TextView
                android:id="@+id/sum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary of past experience"
                android:layout_below="@id/exp2"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>

            <ImageView
                android:layout_below="@id/sum2"
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginStart="30sp"
                android:layout_marginTop="20sp"
                />
            <TextView
                android:layout_alignStart="@id/line2"
                android:layout_below="@id/sum2"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:textColor="#2E3192"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Education"
                android:drawableEnd="@drawable/ic_round_edit"
                android:drawablePadding="230sp"/>
            <TextView
                android:id="@+id/edu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IIT Bombay"
                android:textColor="@color/black"
                android:layout_below="@id/line2"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/edu1"
                android:text="2012-2015"
                android:layout_below="@id/line2"
                android:textSize="12sp"
                android:layout_marginTop="16sp"
                android:layout_marginStart="280sp"/>
            <TextView
                android:id="@+id/edu_sum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masters in CS"
                android:layout_below="@id/edu1"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/edu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VJTI ,Mumbai "
                android:textColor="@color/black"
                android:layout_below="@id/edu_sum1"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/edu2"
                android:text="2009-2012"
                android:layout_below="@id/edu_sum1"
                android:textSize="12sp"
                android:layout_marginTop="18sp"
                android:layout_marginStart="280sp"/>
            <TextView
                android:id="@+id/edu_sum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BE in CS"
                android:layout_below="@id/edu2"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>
            <!-- Projects -->
            <ImageView
                android:layout_below="@id/edu_sum2"
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginStart="30sp"
                android:layout_marginTop="20sp"
                />
            <TextView
                android:layout_alignStart="@id/line3"
                android:layout_below="@id/edu_sum2"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:textColor="#2E3192"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Projects"
                android:drawableEnd="@drawable/ic_round_edit"
                android:drawablePadding="240sp"/>
            <TextView
                android:id="@+id/pro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI-Based Application"
                android:textColor="@color/black"
                android:layout_below="@id/line3"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/pro1"
                android:text="2012-2015"

                android:layout_below="@id/line3"
                android:textSize="12sp"
                android:layout_marginTop="16sp"
                android:layout_marginStart="280sp"/>
            <TextView
                android:id="@+id/pro_sum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary of Project"
                android:layout_below="@id/pro1"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/pro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abc Website"
                android:textColor="@color/black"
                android:layout_below="@id/pro_sum1"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/pro2"
                android:text="2009-2012"
                android:layout_below="@id/pro_sum1"
                android:textSize="12sp"
                android:layout_marginTop="18sp"
                android:layout_marginStart="280sp"/>
            <TextView
                android:id="@+id/pro_sum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary of Project "
                android:layout_below="@id/pro2"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>
            <!---Skills-->
            <ImageView
                android:layout_below="@id/pro_sum2"
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginStart="30sp"
                android:layout_marginTop="20sp"
                />
            <TextView
                android:layout_alignStart="@id/line4"
                android:layout_below="@id/pro_sum2"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:textColor="#2E3192"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Skills"
                android:drawableEnd="@drawable/ic_round_edit"
                android:drawablePadding="260sp"/>

            <TextView
                android:id="@+id/skill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Development"
                android:layout_below="@id/line4"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/skill2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:layout_below="@id/line4"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30sp"/>
            <TextView
                android:id="@+id/skill3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:layout_below="@id/line4"
                android:layout_marginStart="30sp"
                android:layout_marginTop="50sp"/>
            <TextView
                android:id="@+id/skill4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine Learning"
                android:layout_below="@id/line4"
                android:layout_marginStart="30sp"
                android:layout_marginTop="70sp"/>


        </RelativeLayout>

    </ScrollView>




</RelativeLayout>